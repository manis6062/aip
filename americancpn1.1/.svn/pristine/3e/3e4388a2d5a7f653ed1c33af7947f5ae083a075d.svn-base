.red {
    color: red;
}

.boxer {
    display: none;
}

#checker_broker:checked ~ .broker, #checker_owner:checked ~ .owner, #checker_client:checked ~ .client, #checker_referrer:checked ~ .referrer {
    display: block;
}

.super_admin, .admin, .super_broker, .broker, .referrer, .owner, .client {
    display: none;
}

input[type="radio"], input[type="checkbox"] {
    line-height: normal;
    margin: 0 6px 15px;
}

.check-box {
    padding: 0 5px;
}

.select2-container--default .select2-selection--single {
    padding: 6px;
    height: 37px;
    width: 148px;
    font-size: 1.2em;
    position: relative;
}

.select2-container--default .select2-selection--single .select2-selection__arrow {
    width: 400px;
    color: #fff;
    font-size: 1.3em;
    padding: 4px 12px;
    height: 27px;
    position: absolute;
    top: 0px;
    right: 0px;
    width: 20px;
}

#ajax-spinner {
    display: none;
    position: absolute;
    width: 50px;
    height: 50px;
    background: grey;
    border-radius: 50%;
}